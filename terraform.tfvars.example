# Configuration example - Copy this file to terraform.tfvars and customize

# REQUIRED: Your GCP project
project_id = "your-gcp-project-id"

# Region and zone (default: Madrid)
# region = "europe-southwest1"
# zone   = "europe-southwest1-a"

# Machine type (default: n2-standard-16 = 64GB RAM)
# machine_type = "n2-standard-16"

# Number of nodes to deploy (default: 1)
# node_count = 1

# Secure SSH via IAP (default: true)
# enable_iap_ssh = true

# Allowed CIDRs for SSH when enable_iap_ssh=false
# allowed_ssh_cidrs = ["0.0.0.0/0"]
