# Ejemplo de configuración - Copia este archivo a terraform.tfvars y personaliza

# REQUERIDO: Tu proyecto de GCP
project_id = "your-gcp-project-id"

# Región y zona (default: Madrid)
# region = "europe-southwest1"
# zone   = "europe-southwest1-a"

# Tipo de máquina (default: n2-standard-16 = 64GB RAM)
# machine_type = "n2-standard-16"

# Número de nodos a desplegar (default: 1)
# node_count = 1

# SSH seguro via IAP (default: true)
# enable_iap_ssh = true

# CIDRs permitidos para SSH cuando enable_iap_ssh=false
# allowed_ssh_cidrs = ["0.0.0.0/0"]
